{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Executable",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",                      // GDB mode
      "miDebuggerPath": "/usr/bin/gdb",     // lowercase m! <<<<<<
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}